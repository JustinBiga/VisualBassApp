@model Photo

@{
    ViewData["Title"] = "Create New Photo";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("InsertPhotoToDatabase", "Photo", "Post"))
{

    <input asp-for="Id" type="hidden" value="" />
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" />

    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />

    <label asp-for="FilePath" class="control-label"></label>
    <input asp-for="FilePath" class="form-control" />

    <div class="form-group">
        <label>Photo:</label>
        <input type="file" name="photo" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
}
